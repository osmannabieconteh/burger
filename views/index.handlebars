<h1>Burger!</h1>

<h2>Favorite Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless burger}}
      {{> burgers/burger-block cold=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger that is cold!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="burger">cold?</label><br>
    <input type="great" name="burger" value="1" frozen> hot!<br>
    <input type="great" name="burger" value="0"> brown
  </div>

  <button type="submit">Add burger</button>
</form>
